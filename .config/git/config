# TODO: define and reuse colors like here: https://github.com/dandavison/delta/blob/08ec386f2517ea25c8810be924847fe54018a023/themes.gitconfig#L106
[delta]
  pager                         = "less --mouse"
  syntax-theme                  = "gruvbox-material-dark"
  hunk-header-style             = file line-number syntax
  hunk-header-decoration-style  = "#d8a657" box
  hunk-header-file-style        = "#ddc7a1"
  hunk-header-line-number-style = "#ddc7a1"
  file-style                    = "#d4be98" bold
  file-decoration-style         = "#e78a4e" ul box
  commit-style                  = omit
  navigate                      = true
  side-by-side                  = true
  true-color                    = always
  hyperlinks                    = true
  plus-style                    = syntax "#34381b"
  plus-emph-style               = syntax "#3b4439"
  minus-style                   = syntax "#402120"
  minus-emph-style              = syntax "#4f422e"
  zero-style                    = syntax
  whitespace-error-style        = "magenta reverse"
  map-styles                    =        \
       bold red     => syntax "#ea6962", \
       bold green   => syntax "#a9b665", \
       bold yellow  => syntax "#d8a657", \
       bold blue    => syntax "#7daea3", \
       bold magenta => syntax "#d3869b", \
       bold cyan    => syntax "#89b482", \
  hyperlinks-file-link-format   = "vscode://file/{path}:{line}" # TODO: configure for nvim
  file-added-label              = [+]
  file-copied-label             = [==]
  file-modified-label           = [*]
  file-removed-label            = [-]
  file-renamed-label            = [->]
  line-numbers                  = true
  line-numbers-left-format      = "{nm:>1}┊"
  line-numbers-left-style       = red
  line-numbers-right-format     = "{np:>1}┊"
  line-numbers-right-style      = green

[color]
  ui = auto

[interactive]
  diffFilter = delta --color-only

[init]
  defaultBranch = main

[merge]
  conflictstyle = diff3

[push]
  autoSetupRemote = true

[pull]
  rebase = true

[diff]
  colorMoved = default

[stash]
	showDiff  = true
	showPatch = true

[help]
  autocorrect = 1

[alias]
  # log
  l    = log
  lol  = log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset'
  lola = log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset' --all
  lols = log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset' --stat
  # add
  a   = add
  aa  = add --all
  ap  = add --patch
  au  = add --update
  aap = add --all --patch
  aau = add --all --update
  # branch
  b   = branch
  ba  = branch --all
  bd  = branch --delete
  bdf = branch --delete --force
  bm  = branch --move
  bn  = branch --no-merged
  br  = branch --remote
  # checkout
  co = checkout
  cb = checkout -b
  # diff
  d  = diff
  ds = diff --staged
  dH = diff HEAD
  # cherry-pick
  cp  = cherry-pick
  cpa = cherry-pick --abort
  cpc = cherry-pick --continue
  # clean
  ; cl  = clean
  ; clx = clean -x
  # clone
  cl = clone
  # commit
  c     = commit --verbose
  ca    = commit --verbose --all
  cm    = commit --verbose --message
  cam   = commit --verbose --all --message
  cane  = commit --verbose --amend --no-edit
  caane = commit --verbose --amend --all --no-edit
  # fetch
  f = fetch
  # init
  i = init
  # merge
  m  = merge
  ma = merge --abort
  mc = merge --continue
  # pull
  pl   = pull
  plv  = pull --verbose
  plr  = pull --rebase --verbose
  plra = pull --rebase --verbose --autostash
  # push
  ps     = push
  psd    = push --dry-run
  psf    = push --force-with-lease --force-if-includes
  pssupo = push --set-upstream origin $(git_current_branch)
  psod   = push origin --delete
  # rebase
  rb  = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive
  rbs = rebase --skip
  rbm = rebase $(git_main_branch)
  # remote
  rv   = remote --verbose
  ra   = remote add
  rrm  = remote remove
  rmv  = remote rename
  rset = remote set-url
  rup  = remote update
  # reset
  res  = reset
  resH = reset HEAD
  # restore
  rs = restore --staged
  # rm
  rmc = rm --cached -rf
  # show
  sh = show --pretty=short --show-signature
  # status
  st  = status
  sts = status --short --branch
  # submodule
  si = submodule init
  su = submodule update
  # stash
  sta  = stash apply
  stc  = stash clear
  std  = stash drop
  stp  = stash push
  stpa = stash push --all
  stpu = stash push --include-untracked
  stsp = stash show --patch
  stl  = stash list
  # switch
  sw = switch

  # extras!

  # search
  se = !git rev-list --all | xargs git grep -F
