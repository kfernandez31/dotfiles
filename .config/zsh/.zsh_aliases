#!/bin/sh

source "$HOME"/.zshenv

# Reload config
alias s="source $HOME/.zshenv ; source ${XDG_CONFIG_HOME:-$HOME/.config}/zsh/.zprofile ; source ${XDG_CONFIG_HOME:-$HOME/.config}/zsh/.zshrc"

# Unix command replacements
alias cd='z'
alias cat='bat'
alias diff='delta'
alias find='fdcfg '
alias du='dust -r'
alias less='bat --paging=always'

# Additional flags
alias rm='rm -iv'
alias cp='cp -riv'
alias mv='mv -iv'
alias mkdir='mkdir -pv'
alias rmdir='rmdir -v'
alias df='df -h'
alias du='du -hc'
alias ping='ping -c 5'
alias grep='grep --color=auto'
alias clear='clear -x'
alias rsync='rsync -vrPlu'
alias ffmpeg='ffmpeg -hide_banner'
alias wget="wget --hsts-file=${XDG_DATA_HOME:-$HOME/.local/share}/wget-hsts"

# Shorthands
alias ka='killall'
alias g='git'
alias c='clear -x'
alias md='mkdir'
alias rd='rmdir'
alias tl='tail'
alias hd='head'
alias ff='fastfetch'
alias py='python3'
alias findf='find . -type f -name'
alias findd='find . -type d -name'
alias yt='yt-dlp --embed-metadata -i'
alias yta='yt -x -f bestaudio/best'

# ls
alias l="$EZA_BASE_CMD"
alias l1="$EZA_BASE_CMD -1"
alias ls="$EZA_BASE_CMD"
alias ls1="$EZA_BASE_CMD -1"
alias la="$EZA_BASE_CMD -a"
alias l1a="$EZA_BASE_CMD -1a"
alias ll="$EZA_BASE_CMD -l"
alias lla="$EZA_BASE_CMD -la"
alias lt2="$EZA_BASE_CMD -T --level=2"
alias lta2="$EZA_BASE_CMD -T --level=2 -a"
alias lt2="$EZA_BASE_CMD -T --level=2"
alias lta2="$EZA_BASE_CMD -T --level=2 -a"
alias lt3="$EZA_BASE_CMD -T --level=3"
alias lta3="$EZA_BASE_CMD -T --level=3 -a"
alias lt4="$EZA_BASE_CMD -T --level=4"
alias lta4="$EZA_BASE_CMD -T --level=4 -a"

# tmux
alias t='tmux attach || tmux new-session'
alias ta='tmux attach -t'
alias tn='tmux new -s'
alias tk='tmux kill-session -t'
alias tl='tmux list-sessions'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

# Dotfiles
alias cfg="$(which git) --git-dir=${DOTFILES_HOME:-$HOME/.dotfiles} --work-tree=$HOME"

# Vim
[ -x "$(command -v nvim)" ] && alias vi='nvim' vim='nvim' vimdiff='nvim -d'
