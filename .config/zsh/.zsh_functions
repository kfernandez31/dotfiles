#!/bin/sh

# Make a directory and immediately navigate to it
function take() {
    local DIR=$1
    mkdir -p $DIR && cd $DIR
}

# Delete all merged branches
function gbda() {
  git branch --no-color --merged | command grep -vE "^([+*]|\s*($(git_main_branch)|$(git_develop_branch))\s*$)" | command xargs git branch --delete 2>/dev/null
}

